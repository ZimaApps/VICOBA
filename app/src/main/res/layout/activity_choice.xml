<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/text_view_id"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:textSize="32sp"
            android:text="Karibu Vicoba App" />

        <TextView
            android:id="@+id/userName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_view_id"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:textSize="18sp"
            android:text="Kama hii ni mara ya kwanza kufungua App hii, unaweza kusajiri kikoba au kujiunga kwenye kikoba kilicho sajiliwa tayari." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createCases"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/lightgrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/userName"
            android:text="Sajiri kikoba"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeCases"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createCases"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Jiunge Kwenye Kikoba"/>


        <TextView
            android:id="@+id/userNamex"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/seeCases"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:text="Kama sio mara ya kwanza kutumia App hii, Tafadhali SIGN IN" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeCasesV"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNamex"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="SIGN IN"/>

    </RelativeLayout>

</ScrollView>
