<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createCase">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="8dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            >









            <com.google.android.material.textfield.TextInputLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/kikobanamex"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="12dp"
                android:inputType="text"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kikobanamexx"
                    android:layout_width="match_parent"
                    android:hint="Jina la kikoba"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                style="@style/Divider"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"/>


            <TextView
                android:id="@+id/cheo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="12dp"

                android:text="Nafasi yako kwenye hiki kikoba ni.."/>

            <RadioGroup
                android:id="@+id/radios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/mkiti"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                >

                <RadioButton
                    android:id="@+id/mkiti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M/Kiti"/>

                <RadioButton
                    android:id="@+id/katibu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Katibu"/>

                <RadioButton
                    android:id="@+id/mjumbe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mjumbe"/>
            </RadioGroup>



            <com.google.android.material.textfield.TextInputLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/creatornamex"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:inputType="text"
             >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/creatornamexx"
                    android:layout_width="match_parent"
                    android:hint="Jina Lako Kamili"
                    android:focusable="false"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/creatorphonex"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/creatorphonexx"
                    android:layout_width="match_parent"
                    android:hint="Namba Yako Ya Simu"
                    android:focusable="false"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/creatorphonexxxx"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/creatorpasswordxx"
                    android:layout_width="match_parent"
                    android:hint="****"
                    android:focusable="false"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>




            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"

                />



            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:layout_marginTop="40dp"

                android:layout_marginBottom="40dp"
                android:enabled="true"
                android:text="Unda Kikoba"

                />






        </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>